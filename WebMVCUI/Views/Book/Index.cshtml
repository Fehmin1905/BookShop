@model WebMVCUI.Models.ViewModels.BookViewModels
@{
    int count = 1;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <h3><a class="btn btn-success" asp-action="Create">Add new book</a></h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Book Name</th>
                <th scope="col">Author</th>
                <th scope="col">Language</th>
                <th scope="col">New/Old</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.BookForGetAllDtos)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.BookName</td>
                    <td>@item.AuthorName</td>
                    <td>@item.Language</td>
                    <td>@item.BookStatus</td>
                    <td>@item.Price</td>
                    <td><a class="btn btn-primary" asp-controller="Book" asp-action="EditPage" asp-route-id="@item.Id">Edit</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id">Delete</a></td>
                    <td><a class="btn btn-light" asp-action="AdditionalInfo" asp-controller="Book" asp-route-id="@item.Id">Details</a></td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</body>
</html>